            <li class="@Html.IsSelected(controller: "QualityConcerns")">
                <a asp-controller="QualityConcerns" , asp-action="Index">
                    <div>
                        <i class="fa fa-question-circle"></i>
                        <span class="nav-label">Quality Concerns</span>
                        <span class="fa arrow"></span>
                    </div>
                    <div class="details">
                        Create, View, or Manage Quality Concern Records
                    </div>
                </a>
                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "QualityConcerns", cssClass: "in")">
