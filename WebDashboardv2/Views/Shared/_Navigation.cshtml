                    <li><a asp-controller="BrinellRecords" asp-action="ViewScopeChecks">View Scope Checks</a></li>
                </ul>
            </li>
            <li class="@Html.IsSelected(controller: "LayeredProcessAuditing")">
                <a asp-controller="LayeredProcessAuditing" , asp-action="Index">
                    <div>
                        <i class="fa fa-users"></i>
                        <span class="nav-label">LPA Manager</span>
                        <span class="fa arrow"></span>
                    </div>
                    <div class="details">
                        Create, View, Or Manage Layered Process Audit Documentation
                    </div>
