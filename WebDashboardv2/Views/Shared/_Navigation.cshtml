                        <a asp-controller="ProcessCards" , asp-action="Index">
                            <span class="nav-label">Cleaning</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-third-level">
                            <li><a asp-controller="ProcessCards" asp-action="Index" asp-route-id="9">Line 1 Inspect</a></li>
                            <li><a asp-controller="ProcessCards" asp-action="Index" asp-route-id="10">Line 2 Inspect</a></li>
                        </ul>
                    </li>
                    <li>
                        <a asp-controller="ProcessCards" asp-action="Index" asp-route-id="11">Finishing</a>
                    </li>
                    @if (UserAccess.CanAddProcessCards)
                    {
                        <li><a asp-controller="ProcessCards" asp-action="Add">Add New Process Card</a></li>
                    }
                </ul>
            </li>
            <li class="@Html.IsSelected(controller: "QualityAlerts")">
                <a asp-controller="QualityAlerts" asp-action="Index">
                    <div>
                        <i class="fa fa-exclamation-circle"></i>
                        <span class="nav-label">Quality Alerts</span>
                        <span class="fa arrow"></span>
                    </div>
                    <div class="details">
                        Create, View, or Manage Quality Alert Records
                    </div>
                </a>
                <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "QualityAlerts", cssClass: "in")">
                    <li><a asp-controller="QualityAlerts" asp-action="CreateNew">Create New Alert</a></li>
                    <li><a asp-controller="QualityAlerts" asp-action="ViewCurrent">Work With Quality Alerts</a></li>
                    <li><a asp-controller="QualityAlerts" asp-action="ViewAll">Quality Alert Records</a></li>
                </ul>
