
@{
    ViewData["Title"] = "Create";
    WebDashboardv2.Model.IProductsModel products = (WebDashboardv2.Model.IProductsModel)ViewData["Products"];
    WebDashboardv2.Model.IProductAlerts qualityAlert = (WebDashboardv2.Model.IQualityAlertsModel)ViewData["AlertToCopy"];

}


@*
    int ID { get; set; }
    string Product { get; set; }
    string Title { get; set; }
    string Customer { get; set; }
    string Comments { get; set; }
    string ActionRequired { get; set; }
    DateTime AlertDate { get; set; }
    int Quantity { get; set; }
    string AuthorizedBy { get; set; }
    string Image1Path { get; set; }
    string Image2Path { get; set; }
    string Image3Path { get; set; }
    string Image4Path { get; set; }
    string TemplateTypePath { get; set; }
    int RepeatCount { get; set; }
