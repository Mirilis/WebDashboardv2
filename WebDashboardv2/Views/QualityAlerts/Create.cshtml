<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h2>Create New Alert</h2>
            </div>
            <div class="ibox-content col-lg-12">
                <div class="col-lg-8">
                    <div class="form-group">
                        <div>
                            <label class="col-sm-2 font-normal">Product </label>
                            <div class="p-xxs col-sm-4 col-lg-10">
                                <select data-placeholder="Choose Product" class=" chosen-select" tabindex="4">
                                    @foreach (var product in products.Products)
                                    {
                                        <option value="@product.Product">@product.Product</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div>
                            <label class="col-sm-2 font-normal">Alert Title</label>
                            <div class="p-xxs col-sm-4 col-lg-10">
                                <textarea class="txtArea" name="Title">@if (qualityAlert != null) { @qualityAlert.ProductAlerts.}
                                {
                                    /**/
                                }</textarea>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div>
                            <label class="col-sm-2 font-normal">Depts</label>
                            <div class="p-xxs col-sm-4 col-lg-10">
                                <select data-placeholder="Choose Departments" class="chosen-select" chosen-select" multiple tabindex="4">
                                    @foreach (WebDashboardv2.Model.Departments dept in Enum.GetValues(typeof(WebDashboardv2.Model.Departments)))
                                    {
                                        <option value="@dept">@dept.ToString()</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div>
                            <label class="col-sm-2 font-normal">Description</label>
                            <div class="p-xxs col-sm-4 col-lg-10">
                                <textarea class="txtArea" name="ActionRequired"></textarea>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div>
                            <label class="col-sm-2 font-normal">Action Required</label>
                            <div class="p-xxs col-sm-4 col-lg-10">
                                <textarea class="txtArea" name="ActionRequired"></textarea>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div>
                            <label class="col-sm-2 font-normal">Comments</label>
                            <div class="p-xxs col-sm-4 col-lg-10">
                                <textarea class="txtArea" name="Comments"></textarea>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div>
                            <label class="col-sm-2 font-normal">Quantity</label>
                            <div class="p-xxs col-sm-4 col-lg-10">
                                <input type="text" class="txtArea" name="Quantity" />
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div>
                            <label class="col-sm-2 font-normal">Root Cause</label>
                            <div class="p-xxs col-sm-4 col-lg-10">
                                <textarea class="txtArea" name="RootCause"></textarea>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div>
                        <label class="col-sm-2 font-normal">Image 1</label>
                        <div class="p-xxs col-sm-4 col-lg-10">
                            <input type="file" class="txtArea" name="Image1" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div>
                        <label class="col-sm-2 font-normal">Image 2</label>
                        <div class="p-xxs col-sm-4 col-lg-10">
                            <input type="file" class="txtArea" name="Image2" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div>
                        <label class="col-sm-2 font-normal">Image 3</label>
                        <div class="p-xxs col-sm-4 col-lg-10">
                            <input type="file" class="txtArea" name="Image3" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div>
                        <label class="col-sm-2 font-normal">Image 4</label>
                        <div class="p-xxs col-sm-4 col-lg-10">
                            <input type="file" class="txtArea" name="Image4" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="ibox-footer col-lg-12">
                <div></div>
                <input type="submit" class="pull-right btn btn-primary btn-xs" value="Submit"/>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/chosen/bootstrap-chosen.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/chosen/bootstrap-chosen.css" />
    </environment>
}

@section Scripts {
    <environment names="Development">
        <script src="~/lib/chosen/chosen.jquery.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/chosen/chosen.jquery.js"></script>
    </environment>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.chosen-select').chosen();

        });
        $(document).ready(function () {
            resizeChosen();
            jQuery(window).on('resize', resizeChosen);
        });

        function resizeChosen() {
            $(".chosen-container").each(function () {
                $(this).attr('style', 'width: 100%');

            });
            $(".txtArea").each(function () {
                $(this).attr('style', 'width: 100%');

            });
        }

    </script>
}
