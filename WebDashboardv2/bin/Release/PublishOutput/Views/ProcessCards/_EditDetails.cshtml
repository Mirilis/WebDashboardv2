@{
    WebDashboardv2.Model.ProcessCard card = (WebDashboardv2.Model.ProcessCard)ViewData["CurrentCard"];
    string ProcessCardClass = (string)ViewData["CardClass"];

}
@if (card != null)
{
    <head>
        <style>
            .update-text {
                width:400px;
            }
        </style>
    </head>
<div class="col-lg-9">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Data Values</h5>
        </div>
        <div class="ibox-content">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Key</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dp in card.CurrentRevision)
                    {
                        if (dp.Type == "image")
                        {
                            <tr>
                                <td>@dp.Key</td>
                                <td width="400">
                                    <div><label>Current File:</label><label>@dp.Value</label></div>
                                    <form id="@card.ID-@dp.Key-IMGFORM" method="post" enctype="multipart/form-data">
                                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                            <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                                            <span class="input-group-addon btn btn-default btn-file"><span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span><input id="@card.ID-@dp.Key-IMG" type="file" name="..."></span>
                                            <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                        </div>
                                    </form>
                                </td>
                                <td><input name="lockedBtn" id="@card.ID-@dp.Key-BTN" class="update-img-button" type="button" value="Update" data-style="expand-right" hidden="hidden" /><span><label class="update-label fa fa-check" id="@card.ID-@dp.Key-LBL"></label></span></td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>@dp.Key</td>
                                <td><input class="update-text" name="lockedTxt" id="@card.ID-@dp.Key-TXT" type="text" value="@dp.Value" readonly="readonly" /></td>
                                <td><span><label class="update-label fa fa-check" id="@card.ID-@dp.Key-LBL"></label></span></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




<script>
    $(document).ready(function () {
        $('input[name="lockedTxt"]').attr("readonly", false);
        $('input[name="lockedBtn"]').attr("hidden", false);
        $('.update-img-button').click(function () {
            var a = ($(this).attr("id")).replace("BTN", "IMG");
            var newVal = a.replace("IMG", $("input[id='" + a + "']").val());
            $.ajax({
                type: "POST",
                url: "@Url.Action("Update")",
                data: { value: newVal },
                dataType: "text",
                success: function (success) {
                    success = success.replace("true", "LBL");
                    $("label[id='" + success + "']").fadeIn().delay(1500).fadeOut();
                },
                error: function () {
                    alert("Update Failed");
                }
            })

            var fileUpload = $("input[id='" + a + "']").get(0);
            var files = fileUpload.files;
            var data = new FormData();
            for (var i = 0; i < files.length; i++) {
                data.append(files[i].name, files[i]);
            }
            $.ajax({
                type: "POST",
                url: "@Url.Action("UploadImage")",
                contentType: false,
                processData: false,
                data: data,
                success: function () {
                },
                error: function () {
                    alert("Update Failed");
                }

            })
        });
        function replace(str, original, replacement) {
            return str.replace(new RegExp(original, 'g'), replacement);
        };
        $('.update-text').change(function () {
            console.log("Entering update-text");
            var a = ($(this).attr("id"));
            console.log(a);
            var newVal = $(this).attr("id").replace("TXT", replace($(this).val(), "-", " "));
            console.log(newVal);

        $.ajax({
            type: "POST",
            url: "@Url.Action("Update")",
            data: { value: newVal },
            dataType: "text",
            success: function (success) {
                success = success.replace("true", "LBL");
                $("label[id='" + success + "']").fadeIn().delay(1500).fadeOut();
            },
            error: function () {
                alert("Update Failed");
            }

        })
    })
});
</script>
}